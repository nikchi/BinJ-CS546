<div class="row">
	<div class="col-sm-12 col-md-6">
		<a href="/shows">Back to Shows List</a>
		<H2>{{ show.name }}</H2>
		<img src="{{ thumbnail }}" alt="{{ show.name }} art" height="300" width="200">
		<p>Rating: {{ show.rating }}</p>
		<p>Description: {{ show.description }}</p>
		<div class="new-comment">
			<form id="review-submit" method="post">
				<input id="review-title" type="text" name="title">
				<input id="review-body" type="text" name="review">
				<input id="review-rating" type="number" name="rating">
				<button id="review-submit-button" type="submit">Submit</button>
			</form>
		</div>
		<div class="reviews">
			{{#each show.reviews}} {{> review }} {{/each}}
		</div>
	</div>
</div>