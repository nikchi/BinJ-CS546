<div class="row">
	<div class="col-sm-12 col-md-6">
		<h2 id="title" >{{ show.name }}</h2>
		<img class="show-art"  src="{{ show.thumbnail }}" alt="{{ show.name }} art" height="300" width="200">
		{{#if show.preview}}
			<iframe width="560" height="300" src={{show.preview}} frameborder="0" ></iframe>
		{{/if}}
		<p>Rating: {{ show.rating }}</p>
		<p>Description: {{ show.description }}</p>

		<div class="reviews">
			{{#each show.reviews}} {{> review }} {{/each}}
		</div>
		<hr>
		<div class="new-comment">
			<h2> Submit your opinion </h2>
			<form id="review-submit" method="post">
				<input id="review-title" placeholder="Title" type="text" name="title"></br>
				<input id="review-body" placeholder="Review goes here" type="text" name="review"></br>
				<input id="review-rating" placeholder="$100%" type="number" name="rating"></br>
				<button id="review-submit-button" type="submit">Submit</button>
			</form>
		</div>
	</div>
</div>